pipeline {
    agent {
        node {
            label 'terraform-pipeline-node'
        }
    }
    stages {
        stage('checkout repo') {
            steps {
              checkout scm
            }
        }
        stage('init') {
            steps {
                sh  'terraform init'
            }
        }
        stage('plan') {
            steps {
                sh  'terraform plan -no-color -out=create.tfplan'   
            }
        }
        stage('apply') {
            steps {
                sh  'terraform apply -no-color -out=create.tfplan'
}
        }
    }
}