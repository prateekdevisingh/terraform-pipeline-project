pipeline {
    agent {
        node {
            label 'terraform-pipeline-node'
        }
    }
    stages {
        stage('checkout repo') {
            steps {
              checkout scm
            }
        }
        stage('init') {
            steps {
                sh  'terraform init'
            }
        }
        stage('plan') {
            steps {
                sh  'terraform plan'
                script {
                  timeout(time: 10, unit: 'MINUTES') {
                    input(id: "Deploy Gate", message: "Deploy ${params.project_name}?", ok: 'Deploy')
                  }
                }
            }
        }
        stage('apply') {
            steps {
                sh  'terraform apply'
}
        }
    }
}